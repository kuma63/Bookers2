<div class="container">
 <div class="row">
  <%= render 'users/list', user: @user, book: @book %>
  <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
     <tr>
      <td><%= link_to attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" <br><%= @user.name %></td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <% if @user.id == current_user.id %>
      <td><%=link_to "Edit",edit_book_path(@book.id), class: "btn btn-success btn-sm" %></td>
      <td>
      <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger btn-sm" %>
      </td>
      <% end %>
     </tr>
    </table>
  </div>
 </div>
</div>
