<div class="col-md-3">
   <h2>User info</h2>
   <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
   <table class="table">
    <tr>
     <th>name</th>
     <td><%= user.name %></td>
    </tr>
    <tr>
     <th>introduction</th>
     <td><%= user.introduction %></td>
    </tr>
   </table>


   <div class="row">
    <% if user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(user),class: "btn btn-outline-secondary" %></p>
    <% end %>
   </div>

   <h2>New book</h2>
   <%= form_with model: book, url:'/books', local:true do |f| %>
   <h4>Title</h4>
   <%= f.text_field :title %>
   <h4>Opinion</h4>
   <%= f.text_area :body %>
   <%= f.submit 'Create book', class: "btn btn-success btn-x btn-block col-6" %>
   <% end %>
</div>